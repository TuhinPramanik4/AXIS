<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Counseling Questionnaire</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 py-10">
    <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Counseling Questionnaire -by Catherine Moore,Ph.D.(OXFORD UNIVERSITY)</h1>
        
        <form action="/submit-test" method="POST">
            <% questions.forEach((q, index) => { %>
                <div class="mb-6">
                    <p class="font-semibold"><%= q.category %> - <%= q.text %></p>
                    <% q.options.forEach((option, i) => { %>
                        <div class="flex items-center mt-2">
                            <input type="radio" name="q<%= index %>" id="q<%= index %>_<%= i %>" value="<%= option %>" required class="mr-2">
                            <label for="q<%= index %>_<%= i %>"><%= option %></label>
                        </div>
                    <% }); %>
                </div>
            <% }); %>

            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg mt-4 hover:bg-blue-700">Submit</button>
        </form>
    </div>
</body>
</html>
